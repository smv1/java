package learn;
public class a4b3c2 {
	public static void main(String[] args) {
		String s="aaaabbbccd";
		int k=0,c=1;
		for(int i=1;i<s.length();i++){
			if(s.charAt(k)==s.charAt(i))
				{c++;
				
				}
			else{
				System.out.print(s.charAt(k)+" "+c);
				c=1;k=i;
			}
			if(i== s.length()-1)
				System.out.print(s.charAt(k)+" "+c);
		}
		
	}

}
